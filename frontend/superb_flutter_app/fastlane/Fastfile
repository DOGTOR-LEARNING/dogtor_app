default_platform(:ios)

platform :ios do
  before_all do
    ENV["FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT"] = "120"
    
    # ğŸ”‡ éš±è— Warning å’Œæ¸›å°‘ Log è¼¸å‡º
    ENV["FASTLANE_HIDE_GITHUB_ISSUES"] = "1"
    ENV["FASTLANE_HIDE_CHANGELOG"] = "1"
    ENV["FASTLANE_SKIP_UPDATE_CHECK"] = "1"
    ENV["FASTLANE_DISABLE_ANIMATION"] = "1"
    
    # æ¸›å°‘ Xcode çš„ Warning è¼¸å‡º
    # ENV["XCODE_XCCONFIG_FILE"] = ""
    
    # CocoaPods éœéŸ³
    ENV["COCOAPODS_DISABLE_STATS"] = "true"
  end

  desc "Build iOS app with manual code signing for CI"
  lane :build do
    setup_ci if ENV['CI']

    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # 1) è¨­ç½® Flutter ç’°å¢ƒ
    sh("flutter", "clean", log: false)
    sh("flutter", "pub", "get", log: false)

    # 2) CocoaPodsï¼ˆåœ¨ ios ç›®éŒ„åº•ä¸‹ï¼‰
    cocoapods(
      podfile: "ios/Podfile",
      try_repo_update_on_error: true,
      clean_install: true,   # ç­‰åŒ pod install --clean-installï¼ˆé¿å…æ®˜ç•™ï¼‰
      repo_update: false,    # éœ€è¦æ™‚æ‰è¨­ trueï¼›èˆ‡ try_repo_update_on_error äº’æ–¥
      silent: true           # ğŸ”‡ éœéŸ³æ¨¡å¼
    )
    
    # ğŸ”§ ä¿®æ­£ CocoaPods target çš„ iOS deployment target
    podfile_path = File.expand_path("../ios/Podfile", __dir__)
    if File.exist?(podfile_path)
      sh("sed -i '' 's/platform :ios, .*/platform :ios, \"12.0\"/' '#{podfile_path}'")
      UI.message("ğŸ“± Updated Podfile platform to iOS 12.0")
    else
      UI.error("âŒ Podfile not found at #{podfile_path}")
    end
    
    # ä¿®æ­£ Pods ç›®éŒ„ä¸­çš„ deployment target
    pods_dir = File.expand_path("../ios/Pods", __dir__)
    if Dir.exist?(pods_dir)
      sh("find '#{pods_dir}' -name '*.xcconfig' -exec sed -i '' 's/IPHONEOS_DEPLOYMENT_TARGET = [0-9.]*/IPHONEOS_DEPLOYMENT_TARGET = 12.0/g' {} \\;") rescue UI.message("Could not update deployment targets in xcconfig files")
      UI.message("ğŸ”§ Updated Pods deployment targets to iOS 12.0")
    end
    
    # åŒæ™‚ä¸‹è¼‰ Development å’Œ App Store è­‰æ›¸
    match(
      type: "development",  # ğŸ‘ˆ Archive éšæ®µç”¨
      readonly: true,
      api_key: api_key,
      clone_branch_directly: true
    )

    match(
      type: "appstore",     # ğŸ‘ˆ Export éšæ®µç”¨
      readonly: true,
      api_key: api_key,
      clone_branch_directly: true
    )

    # è¨­å®šæ‰‹å‹•ç°½ç« 
    TEAM   = "623TA8PLPU"
    BUNDLE = "com.dogtor.superbFlutterApp"
    PROF   = "match AppStore #{BUNDLE}"

    # è¨­å®šç‚ºè‡ªå‹•ç°½ç« ï¼ˆä½¿ç”¨ match ä¸‹è¼‰çš„è­‰æ›¸ï¼‰
    update_code_signing_settings(
      path: "ios/Runner.xcodeproj", 
      use_automatic_signing: true,  # ğŸ”„ æ”¹ç‚ºè‡ªå‹•ç°½ç½²
      team_id: TEAM, 
      targets: ["Runner"]
    )

    # æ§‹å»ºæ‡‰ç”¨
    build_app(
      workspace: File.expand_path("../ios/Runner.xcworkspace", __dir__),
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      clean: true,
      silent: false,          # ğŸ”‡ æ¸›å°‘æ§‹å»ºè¼¸å‡º
      suppress_xcode_output: false,  # ğŸ”‡ éš±è— Xcode è©³ç´°è¼¸å‡º
      #codesigning_identity: "Apple Development",
      xcargs: [
        "DEVELOPMENT_TEAM=#{TEAM}",
        "PRODUCT_BUNDLE_IDENTIFIER=#{BUNDLE}",
        "IPHONEOS_DEPLOYMENT_TARGET=12.0",  # ğŸ”§ ä¿®æ­£ iOS ç‰ˆæœ¬è¦æ±‚
        #"CODE_SIGN_IDENTITY=Apple Distribution",  # ğŸ‘ˆ å¼·åˆ¶æŒ‡å®š Distribution è­‰æ›¸
        "-allowProvisioningUpdates"  # ğŸ”§ å…è¨± Xcode è‡ªå‹•æ›´æ–° Provisioning Profiles
      ].join(" "),
      output_directory: "./build",
      output_name: "Runner.ipa",
      include_symbols: true
    )
    
    # ğŸ” Debug: æª¢æŸ¥ ExportOptions.plist
    export_plist_path = Dir.glob("/tmp/**/gym_config*.plist").first || Dir.glob("/var/folders/**/gym_config*.plist").first
    if export_plist_path && File.exist?(export_plist_path)
      UI.message("ğŸ“‹ ExportOptions.plist ä½ç½®: #{export_plist_path}")
      export_options_content = File.read(export_plist_path)
      UI.message("ğŸ“„ ExportOptions.plist å…§å®¹:")
      UI.message(export_options_content)
    else
      UI.message("âš ï¸  æœªæ‰¾åˆ° ExportOptions.plist æª”æ¡ˆ")
    end
    
    # ğŸ” Debug: æª¢æŸ¥è­‰æ›¸å’Œ Provisioning Profile
    UI.message("ğŸ” å·²å®‰è£çš„è­‰æ›¸:")
    sh("security find-identity -v -p codesigning", log: false)
    
    UI.message("ğŸ“± å¯ç”¨çš„ Provisioning Profiles:")
    sh("find ~/Library/MobileDevice/Provisioning\\ Profiles -name '*.mobileprovision' -exec echo {} \\; -exec security cms -D -i {} \\; | grep -A1 -B1 '#{BUNDLE}'", log: false) rescue UI.message("ç„¡æ³•åˆ—å‡º Provisioning Profiles")
    
    # ğŸ” Debug: æª¢æŸ¥æ§‹å»ºçµæœ
    if File.exist?("./build/Runner.ipa")
      ipa_size = File.size("./build/Runner.ipa") / (1024 * 1024.0)
      UI.success("âœ… IPA æª”æ¡ˆå·²å»ºç«‹: #{ipa_size.round(2)} MB")
    else
      UI.error("âŒ IPA æª”æ¡ˆå»ºç«‹å¤±æ•—")
    end
    
    UI.success("âœ… iOS build completed successfully!")
  end

  desc "Deploy to TestFlight"
  lane :beta do
    setup_ci if ENV['CI']
    
    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # ğŸ”„ é‡ç”¨ build lane çš„è¨­å®šä¸¦å¢åŠ  build number
    build  # é‡ç”¨ build lane
    
    # è‡ªå‹•å¢åŠ  build number
    increment_build_number(
      xcodeproj: "ios/Runner.xcodeproj"
    )
    
    # é‡æ–° buildï¼ˆå› ç‚º build number æ”¹è®Šäº†ï¼‰
    build_app(
      workspace: File.expand_path("../ios/Runner.xcworkspace", __dir__),
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      clean: false,  # ä¸éœ€è¦ cleanï¼Œbuild lane å·²ç¶“åšäº†
      silent: true,
      suppress_xcode_output: true,
      xcargs: [
        "DEVELOPMENT_TEAM=623TA8PLPU",
        "PRODUCT_BUNDLE_IDENTIFIER=com.dogtor.superbFlutterApp",
        "IPHONEOS_DEPLOYMENT_TARGET=12.0",
        "CODE_SIGN_IDENTITY=Apple Distribution",
        "-allowProvisioningUpdates"  # ğŸ”§ å…è¨± Xcode è‡ªå‹•æ›´æ–° Provisioning Profiles
      ].join(" "),
      output_directory: "./build",
      output_name: "Runner.ipa",
      include_symbols: true
    )
    
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      changelog: "New beta build from CI/CD"
    )
    
    UI.success("ğŸš€ App successfully uploaded to TestFlight!")
  end

  desc "Deploy to App Store"
  lane :deploy do
    setup_ci if ENV['CI']
    
    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # ğŸ”„ é‡ç”¨ build lane çš„è¨­å®š
    build  # é‡ç”¨ build lane
    
    upload_to_app_store(
      api_key: api_key,
      submit_for_review: false,
      automatic_release: false,
      force: true,
      skip_metadata: false,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    UI.success("ğŸª App successfully uploaded to App Store Connect!")
  end

  desc "Upload to TestFlight (artifacts only)"
  lane :upload_testflight do
    setup_ci if ENV['CI']
    
    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # æª¢æŸ¥ IPA æª”æ¡ˆæ˜¯å¦å­˜åœ¨
    ipa_path = "./build/Runner.ipa"
    unless File.exist?(ipa_path)
      UI.error("âŒ IPA æª”æ¡ˆä¸å­˜åœ¨: #{ipa_path}")
      UI.error("è«‹ç¢ºä¿å·²ä¸‹è¼‰ build artifacts")
      raise "IPA file not found"
    end
    
    upload_to_testflight(
      api_key: api_key,
      ipa: ipa_path,
      skip_waiting_for_build_processing: true,
      changelog: "New beta build from CI/CD"
    )
    
    UI.success("ğŸš€ App successfully uploaded to TestFlight!")
  end

  desc "Upload to App Store (artifacts only)"
  lane :upload_appstore do
    setup_ci if ENV['CI']
    
    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # æª¢æŸ¥ IPA æª”æ¡ˆæ˜¯å¦å­˜åœ¨
    ipa_path = "./build/Runner.ipa"
    unless File.exist?(ipa_path)
      UI.error("âŒ IPA æª”æ¡ˆä¸å­˜åœ¨: #{ipa_path}")
      UI.error("è«‹ç¢ºä¿å·²ä¸‹è¼‰ build artifacts")
      raise "IPA file not found"
    end
    
    upload_to_app_store(
      api_key: api_key,
      ipa: ipa_path,
      submit_for_review: false,
      automatic_release: false,
      force: true,
      skip_metadata: false,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    UI.success("ğŸª App successfully uploaded to App Store Connect!")
  end
end
