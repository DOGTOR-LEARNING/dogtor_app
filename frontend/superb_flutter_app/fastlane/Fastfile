default_platform(:ios)

platform :ios do
  before_all do
    ENV["FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT"] = "120"
    
    # ğŸ”‡ éš±è— Warning å’Œæ¸›å°‘ Log è¼¸å‡º
    ENV["FASTLANE_HIDE_GITHUB_ISSUES"] = "1"
    ENV["FASTLANE_HIDE_CHANGELOG"] = "1"
    ENV["FASTLANE_SKIP_UPDATE_CHECK"] = "1"
    ENV["FASTLANE_DISABLE_ANIMATION"] = "1"
    
    # æ¸›å°‘ Xcode çš„ Warning è¼¸å‡º
    # ENV["XCODE_XCCONFIG_FILE"] = ""
    
    # CocoaPods éœéŸ³
    ENV["COCOAPODS_DISABLE_STATS"] = "true"
  end

  desc "Build iOS app with manual code signing for CI"
  lane :build do
    setup_ci if ENV['CI']

    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # 1) è¨­ç½® Flutter ç’°å¢ƒ
    sh("flutter", "clean", log: false)
    sh("flutter", "pub", "get", log: false)

    # 2) CocoaPodsï¼ˆåœ¨ ios ç›®éŒ„åº•ä¸‹ï¼‰
    cocoapods(
      podfile: "ios/Podfile",
      try_repo_update_on_error: true,
      clean_install: true,   # ç­‰åŒ pod install --clean-installï¼ˆé¿å…æ®˜ç•™ï¼‰
      repo_update: false,    # éœ€è¦æ™‚æ‰è¨­ trueï¼›èˆ‡ try_repo_update_on_error äº’æ–¥
      silent: true           # ğŸ”‡ éœéŸ³æ¨¡å¼
    )

    begin
      update_code_signing_settings(
        path: "ios/Pods/Pods.xcodeproj",
        use_automatic_signing: true
      )
      UI.message("âœ… å·²è¨­å®š Pods å°ˆæ¡ˆç‚ºè‡ªå‹•ç°½ç½²")
    rescue => e
      UI.message("âš ï¸ ç„¡æ³•è¨­å®š Pods è‡ªå‹•ç°½ç½²: #{e.message}")
    end
    
    # ä¸‹è¼‰åŒ¹é…çš„è­‰æ›¸å’Œæè¿°æª”æ¡ˆ
    match(
      type: "appstore",
      readonly: true,
      api_key: api_key, # å¾ç’°å¢ƒè®Šæ•¸è®€å–
      clone_branch_directly: true
    )

    # è¨­å®šæ‰‹å‹•ç°½ç« 
    TEAM   = "623TA8PLPU"
    BUNDLE = "com.dogtor.superbFlutterApp"
    PROF   = "match AppStore #{BUNDLE}"

    # å¼·åˆ¶è¨­å®šç‚ºæ‰‹å‹•ç°½ç« 
    update_code_signing_settings(
      path: "ios/Runner.xcodeproj", 
      use_automatic_signing: false, 
      code_sign_identity: "Apple Distribution",
      team_id: TEAM, 
      targets: ["Runner"]
    )


    # å¾ match ä¸‹è¼‰çš„ profiles ä¸­æŠ“åˆ°å¯¦éš›æª”æ¡ˆè·¯å¾‘
    profile_path = get_provisioning_profile(
      app_identifier: BUNDLE,
      development: false,
      #readonly: true,
      api_key: api_key # å¾ç’°å¢ƒè®Šæ•¸è®€å–
    )
    
    # ç¶å®š Release çµ„æ…‹çš„ Provisioning Profile
    update_project_provisioning(
      xcodeproj: "ios/Runner.xcodeproj",
      target_filter: "Runner",
      build_configuration: "Release",
      # profile: profile_path
      # å»ºè­°ï¼šç›´æ¥çœç•¥ profileï¼Œæœƒç”¨ SIGH_PROFILE_PATH é è¨­
      # profile: lane_context[SharedValues::SIGH_PROFILE_PATH]
    )

    # æ§‹å»ºæ‡‰ç”¨
    build_app(
      workspace: File.expand_path("../ios/Runner.xcworkspace", __dir__),
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      codesigning_identity: "Apple Distribution",
      clean: true,
      silent: true,          # ğŸ”‡ æ¸›å°‘æ§‹å»ºè¼¸å‡º
      suppress_xcode_output: false,  # ğŸ”‡ éš±è— Xcode è©³ç´°è¼¸å‡º
      skip_profile_detection: true,                 # â† å–æ¶ˆ gym è‡ªå‹•ç”¢ç”Ÿ provisioningProfiles
      export_options: { method: "app-store" },      # â† æœ€å°åŒ–ï¼Œä¸æ”¾ provisioningProfiles/signingStyle
      xcargs: [
        "DEVELOPMENT_TEAM=#{TEAM}",
        # "CODE_SIGN_STYLE=Manual",
        "PRODUCT_BUNDLE_IDENTIFIER=#{BUNDLE}",
        # "PROVISIONING_PROFILE_SPECIFIER='match AppStore #{BUNDLE}'", # Avoid affecting other third-party plugins 
        # "CODE_SIGN_IDENTITY=iPhone Distribution"
      ].join(" "),
      output_directory: "./build",
      output_name: "Runner.ipa",
      include_symbols: true
    )
    
    # ğŸ” Debug: æª¢æŸ¥ ExportOptions.plist
    export_plist_path = Dir.glob("/tmp/**/gym_config*.plist").first || Dir.glob("/var/folders/**/gym_config*.plist").first
    if export_plist_path && File.exist?(export_plist_path)
      UI.message("ğŸ“‹ ExportOptions.plist ä½ç½®: #{export_plist_path}")
      export_options_content = File.read(export_plist_path)
      UI.message("ğŸ“„ ExportOptions.plist å…§å®¹:")
      UI.message(export_options_content)
    else
      UI.message("âš ï¸  æœªæ‰¾åˆ° ExportOptions.plist æª”æ¡ˆ")
    end
    
    # ğŸ” Debug: æª¢æŸ¥è­‰æ›¸å’Œ Provisioning Profile
    UI.message("ğŸ” å·²å®‰è£çš„è­‰æ›¸:")
    sh("security find-identity -v -p codesigning", log: false)
    
    UI.message("ğŸ“± å¯ç”¨çš„ Provisioning Profiles:")
    sh("find ~/Library/MobileDevice/Provisioning\\ Profiles -name '*.mobileprovision' -exec echo {} \\; -exec security cms -D -i {} \\; | grep -A1 -B1 '#{BUNDLE}'", log: false) rescue UI.message("ç„¡æ³•åˆ—å‡º Provisioning Profiles")
    
    # ğŸ” Debug: æª¢æŸ¥æ§‹å»ºçµæœ
    if File.exist?("./build/Runner.ipa")
      ipa_size = File.size("./build/Runner.ipa") / (1024 * 1024.0)
      UI.success("âœ… IPA æª”æ¡ˆå·²å»ºç«‹: #{ipa_size.round(2)} MB")
    else
      UI.error("âŒ IPA æª”æ¡ˆå»ºç«‹å¤±æ•—")
    end
    
    UI.success("âœ… iOS build completed successfully!")
  end

  desc "Deploy to TestFlight"
  lane :beta do
    setup_ci if ENV['CI']
    
    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # è¨­ç½® Flutter ç’°å¢ƒ
    sh("flutter", "clean")
    sh("flutter", "pub", "get")
    
    # CocoaPods
    cocoapods(
      podfile: "ios/Podfile",
      try_repo_update_on_error: true,
      clean_install: true,
      repo_update: false,
      silent: true
    )

    # ğŸ”§ åœ¨ CocoaPods ä¹‹å¾Œï¼Œmatch ä¹‹å‰åŠ å…¥
    begin
      update_code_signing_settings(
        path: "ios/Pods/Pods.xcodeproj",
        use_automatic_signing: true
      )
      UI.message("âœ… å·²è¨­å®š Pods å°ˆæ¡ˆç‚ºè‡ªå‹•ç°½ç½²")
    rescue => e
      UI.message("âš ï¸ ç„¡æ³•è¨­å®š Pods è‡ªå‹•ç°½ç½²: #{e.message}")
    end

    # ä¸‹è¼‰åŒ¹é…çš„è­‰æ›¸å’Œæè¿°æª”æ¡ˆ  
    match(
      type: "appstore",
      readonly: true,
      api_key: api_key,
      clone_branch_directly: true
    )
    
    # è¨­å®šæ‰‹å‹•ç°½ç« 
    TEAM   = "623TA8PLPU"
    BUNDLE = "com.dogtor.superbFlutterApp"
    PROF   = "match AppStore #{BUNDLE}"

    # å¼·åˆ¶è¨­å®šç‚ºæ‰‹å‹•ç°½ç« 
    update_code_signing_settings(
      path: "ios/Runner.xcodeproj", 
      use_automatic_signing: false, 
      team_id: TEAM, 
      targets: ["Runner"]
    )
    
    # ç¶å®š Release çµ„æ…‹çš„ Provisioning Profile
    update_project_provisioning(
      xcodeproj: "ios/Runner.xcodeproj",
      target_filter: "Runner",
      build_configuration: "Release",
      profile: PROF
    )
    
    # è‡ªå‹•å¢åŠ  build number
    increment_build_number(
      xcodeproj: "ios/Runner.xcodeproj"
    )
    
    build_app(
      workspace: "ios/Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      xcargs: [
        "DEVELOPMENT_TEAM=#{TEAM}",
        #"CODE_SIGN_STYLE=Manual",
        "PRODUCT_BUNDLE_IDENTIFIER=#{BUNDLE}",
        "IPHONEOS_DEPLOYMENT_TARGET=13.0",  # ğŸ”§ æ›´æ–°ç‚º iOS 13.0
        "PROVISIONING_PROFILE_SPECIFIER='#{PROF}'"
      ].join(" "),
      output_directory: "./build",
      output_name: "Runner.ipa",
      include_symbols: true
    )
    
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      changelog: "New beta build from CI/CD"
    )
    
    UI.success("ğŸš€ App successfully uploaded to TestFlight!")
  end

  desc "Deploy to App Store"
  lane :deploy do
    setup_ci if ENV['CI']
    
    # è¨­å®š App Store Connect APIï¼ˆå¾ç’°å¢ƒè®Šæ•¸è®€å–ï¼‰
    if ENV['CI']
      api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_API_KEY']
      )
    end
    
    # è¨­ç½® Flutter ç’°å¢ƒ
    sh("flutter", "clean")
    sh("flutter", "pub", "get")
    
    # CocoaPods
    cocoapods(
      podfile: "ios/Podfile",
      try_repo_update_on_error: true,
      clean_install: true,
      repo_update: false
    )
    
    match(
      type: "appstore",
      readonly: true,
      api_key: api_key,
      clone_branch_directly: true
    )
    
    # è¨­å®šæ‰‹å‹•ç°½ç« 
    TEAM   = "623TA8PLPU"
    BUNDLE = "com.dogtor.superbFlutterApp"
    PROF   = "match AppStore #{BUNDLE}"

    # å¼·åˆ¶è¨­å®šç‚ºæ‰‹å‹•ç°½ç« 
    update_code_signing_settings(
      path: "ios/Runner.xcodeproj", 
      use_automatic_signing: false, 
      team_id: TEAM, 
      targets: ["Runner"]
    )
    
    # ç¶å®š Release çµ„æ…‹çš„ Provisioning Profile
    update_project_provisioning(
      xcodeproj: "ios/Runner.xcodeproj",
      target_filter: "Runner",
      build_configuration: "Release",
      profile: PROF
    )
    
    build_app(
      workspace: "ios/Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      xcargs: [
        "DEVELOPMENT_TEAM=#{TEAM}",
        "CODE_SIGN_STYLE=Manual",
        "PRODUCT_BUNDLE_IDENTIFIER=#{BUNDLE}",
        "IPHONEOS_DEPLOYMENT_TARGET=13.0",  # ğŸ”§ æ›´æ–°ç‚º iOS 13.0
        "PROVISIONING_PROFILE_SPECIFIER='#{PROF}'"
      ].join(" "),
      output_directory: "./build",
      output_name: "Runner.ipa",
      include_symbols: true
    )
    
    upload_to_app_store(
      api_key: api_key,
      submit_for_review: false,
      automatic_release: false,
      force: true,
      skip_metadata: false,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    UI.success("ğŸª App successfully uploaded to App Store Connect!")
  end
end